<% content_for :page_title, "Design System Styleguide" %>

<div class="bg-background min-h-screen py-12">
  <div class="container mx-auto max-w-7xl px-6 lg:px-8">
    <%# Header %>
    <div class="mx-auto max-w-3xl text-center mb-12">
      <h1 class="text-4xl font-bold tracking-tight text-foreground sm:text-6xl">
        Cornerstone Design System
      </h1>
      <p class="mt-6 text-lg leading-8 text-muted-foreground">
        A comprehensive design system inspired by ShadCN UI, built with Tailwind CSS and ViewComponent.
      </p>
    </div>

    <%# Navigation %>
    <div class="mb-12 border-b border-border">
      <nav class="-mb-px flex space-x-8 overflow-x-auto" aria-label="Tabs">
        <a href="#buttons" class="border-primary text-primary whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          Buttons
        </a>
        <a href="#inputs" class="border-transparent text-muted-foreground hover:border-border hover:text-foreground whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          Inputs
        </a>
        <a href="#cards" class="border-transparent text-muted-foreground hover:border-border hover:text-foreground whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          Cards
        </a>
        <a href="#alerts" class="border-transparent text-muted-foreground hover:border-border hover:text-foreground whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          Alerts
        </a>
        <a href="#tables" class="border-transparent text-muted-foreground hover:border-border hover:text-foreground whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          Tables
        </a>
        <a href="#layouts" class="border-transparent text-muted-foreground hover:border-border hover:text-foreground whitespace-nowrap border-b-2 py-4 px-1 text-sm font-medium">
          Layouts
        </a>
      </nav>
    </div>

    <%# Buttons Section %>
    <section id="buttons" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Buttons</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display buttons in different variants and sizes.
      </p>

      <div class="space-y-12">
        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Variants</h3>
          <div class="flex flex-wrap items-center gap-4">
            <%= render Styleguide::ButtonComponent.new(variant: :default) do %>
              Default
            <% end %>
            <%= render Styleguide::ButtonComponent.new(variant: :secondary) do %>
              Secondary
            <% end %>
            <%= render Styleguide::ButtonComponent.new(variant: :destructive) do %>
              Destructive
            <% end %>
            <%= render Styleguide::ButtonComponent.new(variant: :outline) do %>
              Outline
            <% end %>
            <%= render Styleguide::ButtonComponent.new(variant: :ghost) do %>
              Ghost
            <% end %>
            <%= render Styleguide::ButtonComponent.new(variant: :link) do %>
              Link
            <% end %>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Sizes</h3>
          <div class="flex flex-wrap items-center gap-4">
            <%= render Styleguide::ButtonComponent.new(size: :sm) do %>
              Small
            <% end %>
            <%= render Styleguide::ButtonComponent.new(size: :default) do %>
              Default
            <% end %>
            <%= render Styleguide::ButtonComponent.new(size: :lg) do %>
              Large
            <% end %>
            <%= render Styleguide::ButtonComponent.new(size: :icon, variant: :outline) do %>
              <%= icon "heart", variant: :solid, class: "h-4 w-4" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>

    <%# Inputs Section %>
    <section id="inputs" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Form Components</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Form inputs, labels, and controls for user input.
      </p>

      <div class="max-w-2xl space-y-12">
        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Input</h3>
          <div class="space-y-4">
            <%= render Styleguide::LabelComponent.new(for_id: "email") do %>
              Email
            <% end %>
            <%= render Styleguide::InputComponent.new(type: :email, id: "email", placeholder: "email@example.com") %>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Textarea</h3>
          <%= render Styleguide::LabelComponent.new(for_id: "message") do %>
            Message
          <% end %>
          <%= render Styleguide::TextareaComponent.new(id: "message", placeholder: "Type your message here...") %>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Select</h3>
          <%= render Styleguide::LabelComponent.new(for_id: "select") do %>
            Select an option
          <% end %>
          <%= render Styleguide::SelectComponent.new(id: "select") do %>
            <option>Option 1</option>
            <option>Option 2</option>
            <option>Option 3</option>
          <% end %>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Checkbox</h3>
          <div class="flex items-center space-x-2">
            <%= render Styleguide::CheckboxComponent.new(id: "terms") %>
            <%= render Styleguide::LabelComponent.new(for_id: "terms") do %>
              Accept terms and conditions
            <% end %>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Radio Group</h3>
          <%= render Styleguide::RadioGroupComponent.new(name: "plan") do |c| %>
            <% c.with_item(value: "free", id: "free", label: "Free", checked: true) %>
            <% c.with_item(value: "pro", id: "pro", label: "Pro") %>
            <% c.with_item(value: "enterprise", id: "enterprise", label: "Enterprise") %>
          <% end %>
        </div>
      </div>
    </section>

    <%# Badges Section %>
    <section id="badges" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Badges</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display badges for status, labels, and categories.
      </p>

      <div class="flex flex-wrap items-center gap-4">
        <%= render Styleguide::BadgeComponent.new(variant: :default) do %>
          Default
        <% end %>
        <%= render Styleguide::BadgeComponent.new(variant: :secondary) do %>
          Secondary
        <% end %>
        <%= render Styleguide::BadgeComponent.new(variant: :destructive) do %>
          Destructive
        <% end %>
        <%= render Styleguide::BadgeComponent.new(variant: :outline) do %>
          Outline
        <% end %>
      </div>
    </section>

    <%# Cards Section %>
    <section id="cards" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Cards</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display content in card containers.
      </p>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 auto-rows-min">
        <%= render Styleguide::CardComponent.new do |c| %>
          <% c.with_header do %>
            <% c.with_title { "Card Title" } %>
            <% c.with_description { "Card description goes here." } %>
          <% end %>
          <% c.with_body do %>
            <p class="text-sm text-muted-foreground">This is the card content area.</p>
          <% end %>
          <% c.with_footer do %>
            <%= render Styleguide::ButtonComponent.new(variant: :outline, size: :sm) do %>
              Action
            <% end %>
          <% end %>
        <% end %>

        <%= render Styleguide::CardComponent.new do |c| %>
          <% c.with_body do %>
            <div class="space-y-4">
              <div class="flex items-center space-x-4">
                <%= render Styleguide::AvatarComponent.new do |a| %>
                  <% a.with_fallback { "JD" } %>
                <% end %>
                <div>
                  <p class="text-sm font-medium">John Doe</p>
                  <p class="text-xs text-muted-foreground">john@example.com</p>
                </div>
              </div>
              <%= render Styleguide::SeparatorComponent.new %>
              <p class="text-sm text-muted-foreground">Card with avatar and separator.</p>
            </div>
          <% end %>
        <% end %>

        <%= render Styleguide::CardComponent.new do |c| %>
          <% c.with_body do %>
            <%= render Styleguide::SkeletonComponent.new(class: "h-32 w-full mb-4") %>
            <%= render Styleguide::SkeletonComponent.new(class: "h-4 w-3/4 mb-2") %>
            <%= render Styleguide::SkeletonComponent.new(class: "h-4 w-1/2") %>
          <% end %>
        <% end %>
      </div>
    </section>

    <%# Alerts Section %>
    <section id="alerts" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Alerts</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display important messages and notifications.
      </p>

      <div class="space-y-4 max-w-2xl">
        <%= render Styleguide::AlertComponent.new(variant: :default) do |c| %>
          <% c.with_title { "Heads up!" } %>
          <% c.with_description { "You can add components to your app using the design system." } %>
        <% end %>

        <%= render Styleguide::AlertComponent.new(variant: :destructive) do |c| %>
          <% c.with_title { "Error" } %>
          <% c.with_description { "Your session has expired. Please log in again." } %>
        <% end %>
      </div>
    </section>

    <%# Progress Section %>
    <section id="progress" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Progress</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display progress indicators.
      </p>

      <div class="space-y-4 max-w-2xl">
        <%= render Styleguide::ProgressComponent.new(value: 33) %>
        <%= render Styleguide::ProgressComponent.new(value: 66) %>
        <%= render Styleguide::ProgressComponent.new(value: 100) %>
      </div>
    </section>

    <%# Tables Section %>
    <section id="tables" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Tables</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display data in tabular format.
      </p>

      <%= render Styleguide::TableComponent.new do |c| %>
        <% c.with_header do %>
          <%= render Styleguide::TableRowComponent.new do %>
            <%= render Styleguide::TableHeadComponent.new { "Name" } %>
            <%= render Styleguide::TableHeadComponent.new { "Email" } %>
            <%= render Styleguide::TableHeadComponent.new { "Status" } %>
          <% end %>
        <% end %>
        <% c.with_body do %>
          <%= render Styleguide::TableRowComponent.new do %>
            <%= render Styleguide::TableCellComponent.new { "John Doe" } %>
            <%= render Styleguide::TableCellComponent.new { "john@example.com" } %>
            <%= render Styleguide::TableCellComponent.new do %>
              <%= render Styleguide::BadgeComponent.new(variant: :default) { "Active" } %>
            <% end %>
          <% end %>
          <%= render Styleguide::TableRowComponent.new do %>
            <%= render Styleguide::TableCellComponent.new { "Jane Smith" } %>
            <%= render Styleguide::TableCellComponent.new { "jane@example.com" } %>
            <%= render Styleguide::TableCellComponent.new do %>
              <%= render Styleguide::BadgeComponent.new(variant: :secondary) { "Pending" } %>
            <% end %>
          <% end %>
          <%= render Styleguide::TableRowComponent.new do %>
            <%= render Styleguide::TableCellComponent.new { "Bob Johnson" } %>
            <%= render Styleguide::TableCellComponent.new { "bob@example.com" } %>
            <%= render Styleguide::TableCellComponent.new do %>
              <%= render Styleguide::BadgeComponent.new(variant: :destructive) { "Inactive" } %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </section>

    <%# Avatar Section %>
    <section id="avatars" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Avatars</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display user avatars with images or fallback initials.
      </p>

      <div class="flex items-center gap-4">
        <%= render Styleguide::AvatarComponent.new do |c| %>
          <% c.with_fallback { "AB" } %>
        <% end %>
        <%= render Styleguide::AvatarComponent.new do |c| %>
          <% c.with_fallback { "CD" } %>
        <% end %>
        <%= render Styleguide::AvatarComponent.new do |c| %>
          <% c.with_fallback { "EF" } %>
        <% end %>
      </div>
    </section>

    <%# Breadcrumb Section %>
    <section id="breadcrumbs" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Breadcrumbs</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Display navigation breadcrumbs.
      </p>

      <%= render Styleguide::BreadcrumbComponent.new do |c| %>
        <% c.with_item(href: "/") { "Home" } %>
        <% c.with_item(href: "/products") { "Products" } %>
        <% c.with_item { "Current Page" } %>
      <% end %>
    </section>

    <%# Layouts Section %>
    <section id="layouts" class="mb-32">
      <h2 class="text-3xl font-bold tracking-tight text-foreground mb-2">Layout Components</h2>
      <p class="text-lg text-muted-foreground mb-8">
        Separators, tabs, and other layout utilities.
      </p>

      <div class="space-y-12">
        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Separator</h3>
          <div>
            <p class="text-sm">Section 1</p>
            <%= render Styleguide::SeparatorComponent.new(class: "my-4") %>
            <p class="text-sm">Section 2</p>
          </div>
        </div>

        <div>
          <h3 class="text-sm font-semibold text-foreground mb-4">Skeleton</h3>
          <div class="space-y-2">
            <%= render Styleguide::SkeletonComponent.new(class: "h-12 w-full") %>
            <%= render Styleguide::SkeletonComponent.new(class: "h-12 w-3/4") %>
            <%= render Styleguide::SkeletonComponent.new(class: "h-12 w-1/2") %>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>
