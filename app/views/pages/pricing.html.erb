<div class="bg-white dark:bg-gray-900 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <h2 class="text-base font-semibold leading-7 text-indigo-600 dark:text-indigo-400">Pricing</h2>
      <p class="mt-2 text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl">
        Choose the right plan for you
      </p>
    </div>
    <p class="mx-auto mt-6 max-w-2xl text-center text-lg leading-8 text-gray-600 dark:text-gray-300">
      Start free and upgrade as you grow. All plans include our core features.
    </p>

    <div class="isolate mx-auto mt-16 grid max-w-md grid-cols-1 gap-y-8 sm:mt-20 lg:mx-0 lg:max-w-none lg:grid-cols-3">
      <% @plans.each_with_index do |plan, index| %>
        <div class="flex flex-col justify-between rounded-3xl bg-white dark:bg-gray-800 p-8 ring-1 ring-gray-200 dark:ring-gray-700 xl:p-10 <%= 'lg:z-10 lg:rounded-b-none' if index == 1 %>">
          <div>
            <div class="flex items-center justify-between gap-x-4">
              <h3 class="text-lg font-semibold leading-8 text-gray-900 dark:text-white">
                <%= plan['name'] %>
              </h3>
              <% if index == 1 %>
                <p class="rounded-full bg-indigo-600/10 px-2.5 py-1 text-xs font-semibold leading-5 text-indigo-600 dark:bg-indigo-400/10 dark:text-indigo-400">
                  Most popular
                </p>
              <% end %>
            </div>
            <p class="mt-4 text-sm leading-6 text-gray-600 dark:text-gray-300">
              Perfect for <%= index == 0 ? 'getting started' : index == 1 ? 'growing teams' : 'large organizations' %>
            </p>
            <p class="mt-6 flex items-baseline gap-x-1">
              <% if plan['price'] == 'custom' %>
                <span class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">Custom</span>
              <% else %>
                <span class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white">$<%= plan['price'] %></span>
                <span class="text-sm font-semibold leading-6 text-gray-600 dark:text-gray-300">/<%= plan['interval'] %></span>
              <% end %>
            </p>
            <ul role="list" class="mt-8 space-y-3 text-sm leading-6 text-gray-600 dark:text-gray-300">
              <% plan['features'].each do |feature_key, feature_value| %>
                <li class="flex gap-x-3">
                  <svg class="h-6 w-5 flex-none text-indigo-600 dark:text-indigo-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M16.704 4.153a.75.75 0 01.143 1.052l-8 10.5a.75.75 0 01-1.127.075l-4.5-4.5a.75.75 0 011.06-1.06l3.894 3.893 7.48-9.817a.75.75 0 011.05-.143z" clip-rule="evenodd" />
                  </svg>
                  <%= feature_key.humanize %>: <strong><%= feature_value %></strong>
                </li>
              <% end %>
            </ul>
          </div>
          <% if user_signed_in? %>
            <%= link_to "Get started", new_subscription_path(plan_id: plan['id']), class: "mt-8 block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          <% else %>
            <%= link_to "Get started", new_user_registration_path, class: "mt-8 block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>