<div class="min-h-screen flex items-center justify-center bg-background px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm">
    <%= render Styleguide::CardComponent.new do |c| %>
      <% c.with_header(html_class: "text-center space-y-2") do |header| %>
        <% header.with_title(html_class: "text-2xl font-semibold tracking-tight") do %>
          Welcome back
        <% end %>
        <% header.with_description do %>
          Sign in to your account to continue
        <% end %>
      <% end %>

      <% c.with_body do %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "grid gap-4" }) do |f| %>
          <%# Email field %>
          <div class="grid gap-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_email") do %>
              Email
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :email,
              id: "user_email",
              name: "user[email]",
              value: resource.email,
              placeholder: "name@example.com",
              autocomplete: "email",
              required: true
            ) %>
          </div>

          <%# Password field %>
          <div class="grid gap-2">
            <div class="flex items-center justify-between">
              <%= render Styleguide::LabelComponent.new(for_id: "user_password") do %>
                Password
              <% end %>
              <% if devise_mapping.recoverable? %>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm font-medium text-primary hover:underline" %>
              <% end %>
            </div>
            <%= render Styleguide::InputComponent.new(
              type: :password,
              id: "user_password",
              name: "user[password]",
              placeholder: "Enter your password",
              autocomplete: "current-password",
              required: true
            ) %>
          </div>

          <%# Submit button %>
          <%= render Styleguide::ButtonComponent.new(
            type: :submit,
            variant: :default,
            html_class: "w-full"
          ) do %>
            Sign in
          <% end %>

          <%# Divider %>
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <span class="w-full border-t border-border"></span>
            </div>
            <div class="relative flex justify-center text-xs uppercase">
              <span class="bg-card px-2 text-muted-foreground">Or continue with</span>
            </div>
          </div>

          <%# Magic link button %>
          <%= link_to new_magic_link_path, class: "block" do %>
            <%= render Styleguide::ButtonComponent.new(
              variant: :outline,
              html_class: "w-full"
            ) do %>
              <%= icon "envelope", class: "h-4 w-4 mr-2" %>
              Sign in with magic link
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <% c.with_footer do %>
        <div class="text-center text-sm text-muted-foreground">
          Don't have an account?
          <%= link_to "Sign up", new_registration_path(resource_name), class: "font-semibold text-primary hover:underline" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
