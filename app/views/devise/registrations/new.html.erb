<div class="min-h-screen flex items-center justify-center bg-background px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm">
    <%= render Styleguide::CardComponent.new do |c| %>
      <% c.with_header(html_class: "text-center space-y-2") do |header| %>
        <% header.with_title(html_class: "text-2xl font-semibold tracking-tight") do %>
          Create an account
        <% end %>
        <% header.with_description do %>
          Enter your details below to get started
        <% end %>
      <% end %>

      <% c.with_body do %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "grid gap-4" }) do |f| %>
          <%# Display error messages if any %>
          <% if resource.errors.any? %>
            <%= render Styleguide::AlertComponent.new(variant: :destructive) do |alert| %>
              <% alert.with_title { "There were #{pluralize(resource.errors.count, 'error')} with your submission:" } %>
              <% alert.with_description do %>
                <ul class="list-disc list-inside text-sm mt-2">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            <% end %>
          <% end %>

          <%# Email field %>
          <div class="grid gap-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_email") do %>
              Email
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :email,
              id: "user_email",
              name: "user[email]",
              value: resource.email,
              placeholder: "name@example.com",
              autocomplete: "email",
              required: true
            ) %>
          </div>

          <%# Password field %>
          <div class="grid gap-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_password") do %>
              Password
              <% if @minimum_password_length %>
                <span class="text-xs text-muted-foreground font-normal ml-1">
                  (<%= @minimum_password_length %> characters minimum)
                </span>
              <% end %>
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :password,
              id: "user_password",
              name: "user[password]",
              placeholder: "Create a password",
              autocomplete: "new-password",
              required: true
            ) %>
          </div>

          <%# Submit button %>
          <%= render Styleguide::ButtonComponent.new(
            type: :submit,
            variant: :default,
            html_class: "w-full"
          ) do %>
            Create account
          <% end %>

          <%# Terms and privacy text %>
          <p class="px-8 text-center text-xs text-muted-foreground">
            By creating an account, you agree to our
            <%= link_to "Terms of Service", terms_path, class: "underline underline-offset-4 hover:text-primary", target: "_blank" %>
            and
            <%= link_to "Privacy Policy", privacy_path, class: "underline underline-offset-4 hover:text-primary", target: "_blank" %>
          </p>
        <% end %>
      <% end %>

      <% c.with_footer do %>
        <div class="text-center text-sm text-muted-foreground">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold text-primary hover:underline" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
