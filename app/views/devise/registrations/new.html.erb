<div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <%= render Styleguide::CardComponent.new do |c| %>
      <% c.with_header(html_class: "text-center") do |h| %>
        <% h.with_title(html_class: "text-2xl") do %>
          Create an account
        <% end %>
        <% h.with_description do %>
          Enter your details below to get started
        <% end %>
      <% end %>

      <% c.with_body do %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <%# Display error messages if any %>
          <% if resource.errors.any? %>
            <%= render Styleguide::AlertComponent.new(variant: :destructive) do |alert| %>
              <% alert.with_title { "There were #{pluralize(resource.errors.count, 'error')} with your submission:" } %>
              <% alert.with_description do %>
                <ul class="list-disc list-inside text-sm mt-2">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            <% end %>
          <% end %>

          <%# Email field %>
          <div class="space-y-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_email") do %>
              Email
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :email,
              id: "user_email",
              name: "user[email]",
              value: resource.email,
              placeholder: "name@example.com",
              autocomplete: "email",
              required: true
            ) %>
          </div>

          <%# Password field with strength indicator %>
          <div class="space-y-2" data-controller="password-strength" data-password-strength-min-length-value="<%= @minimum_password_length || 6 %>">
            <%= render Styleguide::LabelComponent.new(for_id: "user_password") do %>
              Password
              <% if @minimum_password_length %>
                <span class="text-xs text-muted-foreground font-normal ml-1">
                  (<%= @minimum_password_length %> characters minimum)
                </span>
              <% end %>
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :password,
              id: "user_password",
              name: "user[password]",
              placeholder: "Create a password",
              autocomplete: "new-password",
              required: true,
              data: {
                password_strength_target: "input",
                action: "input->password-strength#checkStrength"
              }
            ) %>

            <%# Password strength indicator %>
            <div class="mt-3 space-y-2">
              <div class="flex items-center justify-between">
                <span class="text-xs font-medium text-muted-foreground">Password strength</span>
                <span data-password-strength-target="label" class="text-xs font-semibold"></span>
              </div>
              <div class="w-full bg-muted rounded-full h-2 overflow-hidden">
                <div data-password-strength-target="bar" class="h-full rounded-full transition-all duration-300 ease-in-out bg-muted w-0"></div>
              </div>
            </div>

            <%# Requirements checklist %>
            <div class="mt-3 space-y-2" data-password-strength-target="requirements">
              <div class="flex items-start gap-2 text-xs text-muted-foreground" data-requirement="length">
                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
                <span>At least <%= @minimum_password_length || 6 %> characters</span>
              </div>
              <div class="flex items-start gap-2 text-xs text-muted-foreground" data-requirement="lowercase">
                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
                <span>One lowercase character</span>
              </div>
              <div class="flex items-start gap-2 text-xs text-muted-foreground" data-requirement="uppercase">
                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
                <span>One uppercase character</span>
              </div>
              <div class="flex items-start gap-2 text-xs text-muted-foreground" data-requirement="number">
                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
                <span>One number</span>
              </div>
              <div class="flex items-start gap-2 text-xs text-muted-foreground" data-requirement="special">
                <svg class="w-4 h-4 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M6 18 18 6M6 6l12 12" />
                </svg>
                <span>One special character</span>
              </div>
            </div>
          </div>

          <%# Submit button %>
          <%= render Styleguide::ButtonComponent.new(
            type: :submit,
            variant: :default,
            html_class: "w-full"
          ) do %>
            Create account
          <% end %>
        <% end %>
      <% end %>

      <% c.with_footer do %>
        <div class="text-center text-sm text-muted-foreground">
          Already have an account?
          <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold text-primary hover:underline" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
