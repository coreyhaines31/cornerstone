<div class="min-h-screen flex items-center justify-center bg-background px-4 py-12 sm:px-6 lg:px-8">
  <div class="w-full max-w-sm">
    <%= render Styleguide::CardComponent.new do |c| %>
      <% c.with_header(html_class: "text-center space-y-2") do |header| %>
        <% header.with_title(html_class: "text-2xl font-semibold tracking-tight") do %>
          Change your password
        <% end %>
        <% header.with_description do %>
          Enter a new password for your account
        <% end %>
      <% end %>

      <% c.with_body do %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "grid gap-4" }) do |f| %>
          <%= f.hidden_field :reset_password_token %>

          <%# Display error messages if any %>
          <% if resource.errors.any? %>
            <%= render Styleguide::AlertComponent.new(variant: :destructive) do |alert| %>
              <% alert.with_title { "There were #{pluralize(resource.errors.count, 'error')} with your submission:" } %>
              <% alert.with_description do %>
                <ul class="list-disc list-inside text-sm mt-2">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            <% end %>
          <% end %>

          <%# New password field %>
          <div class="grid gap-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_password") do %>
              New password
              <% if @minimum_password_length %>
                <span class="text-xs text-muted-foreground font-normal ml-1">
                  (<%= @minimum_password_length %> characters minimum)
                </span>
              <% end %>
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :password,
              id: "user_password",
              name: "user[password]",
              placeholder: "Enter new password",
              autocomplete: "new-password",
              required: true
            ) %>
          </div>

          <%# Password confirmation field %>
          <div class="grid gap-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_password_confirmation") do %>
              Confirm new password
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :password,
              id: "user_password_confirmation",
              name: "user[password_confirmation]",
              placeholder: "Confirm new password",
              autocomplete: "new-password",
              required: true
            ) %>
          </div>

          <%# Submit button %>
          <%= render Styleguide::ButtonComponent.new(
            type: :submit,
            variant: :default,
            html_class: "w-full"
          ) do %>
            Change my password
          <% end %>
        <% end %>
      <% end %>

      <% c.with_footer do %>
        <div class="text-center text-sm text-muted-foreground">
          <%= link_to "Back to sign in", new_session_path(resource_name), class: "font-semibold text-primary hover:underline" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
