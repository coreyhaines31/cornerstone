<div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <%= render Styleguide::CardComponent.new do |c| %>
      <% c.with_header(html_class: "text-center") do |header| %>
        <% header.with_title(html_class: "text-2xl") do %>
          Forgot your password?
        <% end %>
        <% header.with_description do %>
          Enter your email address and we'll send you a link to reset your password
        <% end %>
      <% end %>

      <% c.with_body do %>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>
          <%# Display error messages if any %>
          <% if resource.errors.any? %>
            <%= render Styleguide::AlertComponent.new(variant: :destructive) do |alert| %>
              <% alert.with_title { "There were #{pluralize(resource.errors.count, 'error')} with your submission:" } %>
              <% alert.with_description do %>
                <ul class="list-disc list-inside text-sm mt-2">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              <% end %>
            <% end %>
          <% end %>

          <%# Email field %>
          <div class="space-y-2">
            <%= render Styleguide::LabelComponent.new(for_id: "user_email") do %>
              Email
            <% end %>
            <%= render Styleguide::InputComponent.new(
              type: :email,
              id: "user_email",
              name: "user[email]",
              value: resource.email,
              placeholder: "name@example.com",
              autocomplete: "email",
              required: true
            ) %>
          </div>

          <%# Submit button %>
          <%= render Styleguide::ButtonComponent.new(
            type: :submit,
            variant: :default,
            html_class: "w-full"
          ) do %>
            Send reset instructions
          <% end %>
        <% end %>
      <% end %>

      <% c.with_footer do %>
        <div class="text-center text-sm text-muted-foreground">
          Remember your password?
          <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold text-primary hover:underline" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
