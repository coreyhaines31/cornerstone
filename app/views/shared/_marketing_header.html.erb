<header class="bg-background border-b border-border">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <%# Logo %>
    <div class="flex lg:flex-1">
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only"><%= Rails.application.config.application_name %></span>
        <span class="text-2xl font-bold text-foreground"><%= Rails.application.config.application_name %></span>
      <% end %>
    </div>

    <%# Mobile menu button %>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-muted-foreground" data-controller="mobile-menu" data-action="click->mobile-menu#toggle">
        <span class="sr-only">Open main menu</span>
        <%= icon "bars-3", class: "h-6 w-6" %>
      </button>
    </div>

    <%# Desktop navigation links %>
    <div class="hidden lg:flex lg:gap-x-12">
      <%= link_to "Features", "#features", class: "text-sm font-semibold leading-6 text-foreground hover:text-primary transition-colors" %>
      <%= link_to "Pricing", pricing_path, class: "text-sm font-semibold leading-6 text-foreground hover:text-primary transition-colors" %>
      <%= link_to "About", about_path, class: "text-sm font-semibold leading-6 text-foreground hover:text-primary transition-colors" %>
      <%= link_to "Contact", contact_path, class: "text-sm font-semibold leading-6 text-foreground hover:text-primary transition-colors" %>
    </div>

    <%# Auth buttons %>
    <div class="hidden lg:flex lg:flex-1 lg:justify-end lg:gap-x-4">
      <% if user_signed_in? %>
        <%= link_to dashboard_path do %>
          <%= render Styleguide::ButtonComponent.new(variant: :ghost, size: :sm) do %>
            Dashboard
          <% end %>
        <% end %>
      <% else %>
        <%= link_to new_user_session_path do %>
          <%= render Styleguide::ButtonComponent.new(variant: :ghost, size: :sm) do %>
            Sign in
          <% end %>
        <% end %>
        <%= link_to new_user_registration_path do %>
          <%= render Styleguide::ButtonComponent.new(variant: :default, size: :sm) do %>
            Get started
          <% end %>
        <% end %>
      <% end %>
    </div>
  </nav>

  <%# Mobile menu %>
  <div class="lg:hidden hidden" data-mobile-menu-target="menu" role="dialog" aria-modal="true">
    <div class="fixed inset-0 z-10"></div>
    <div class="fixed inset-y-0 right-0 z-10 w-full overflow-y-auto bg-background px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-border">
      <div class="flex items-center justify-between">
        <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
          <span class="sr-only"><%= Rails.application.config.application_name %></span>
          <span class="text-xl font-bold text-foreground"><%= Rails.application.config.application_name %></span>
        <% end %>
        <button type="button" class="-m-2.5 rounded-md p-2.5 text-muted-foreground" data-action="click->mobile-menu#toggle">
          <span class="sr-only">Close menu</span>
          <%= icon "x-mark", class: "h-6 w-6" %>
        </button>
      </div>
      <div class="mt-6 flow-root">
        <div class="-my-6 divide-y divide-border">
          <div class="space-y-2 py-6">
            <%= link_to "Features", "#features", class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-foreground hover:bg-muted", data: { action: "click->mobile-menu#toggle" } %>
            <%= link_to "Pricing", pricing_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-foreground hover:bg-muted", data: { action: "click->mobile-menu#toggle" } %>
            <%= link_to "About", about_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-foreground hover:bg-muted", data: { action: "click->mobile-menu#toggle" } %>
            <%= link_to "Contact", contact_path, class: "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-foreground hover:bg-muted", data: { action: "click->mobile-menu#toggle" } %>
          </div>
          <div class="py-6 space-y-2">
            <% if user_signed_in? %>
              <%= link_to "Dashboard", dashboard_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-foreground hover:bg-muted" %>
            <% else %>
              <%= link_to "Sign in", new_user_session_path, class: "-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-foreground hover:bg-muted" %>
              <%= link_to new_user_registration_path, class: "block" do %>
                <%= render Styleguide::ButtonComponent.new(variant: :default, html_class: "w-full mt-2") do %>
                  Get started
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
